    <None Remove="SQLites\**" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="wwwroot\dotnet.css">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
