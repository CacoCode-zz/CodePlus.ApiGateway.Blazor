    <AssemblyName>CodePlus.ApiGateway</AssemblyName>
    <RootNamespace>CodePlus.ApiGateway</RootNamespace>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Documents\**" />
    <Compile Remove="SQLites\**" />
